      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Circle fx:id="userIconCircle" fill="#1f93ff" layoutX="60.0" layoutY="120.0" radius="20.0" stroke="BLACK" strokeType="INSIDE" />
      <Label fx:id="senderNameLabel" layoutX="100.0" layoutY="110.0" text="Label">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="senderAddressLabel" layoutX="180.0" layoutY="110.0" prefHeight="20.0" text="Label">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="timestampLabel" layoutX="1040.0" layoutY="110.0" prefHeight="20.0" text="Label" />
      <Label fx:id="messageLabel" layoutX="140.0" layoutY="250.0" minWidth="1000.0" text="message">
         <font>
            <Font name="Segoe UI" size="16.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="50.0" prefWidth="1040.0" text="Label">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
